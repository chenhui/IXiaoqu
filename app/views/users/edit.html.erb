<% provide(:title,"Edit user") %>
<h1 class="center">编辑个人资料</h1>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 ">
			<%= bootstrap_form_for(@user) do |f| %>
				<%= f.text_field :name ,label:"姓名"%>
				<%= f.email_field :email,label:"邮件" %>
				<%= f.password_field :password ,label:"密码"%>
				<%= f.password_field :password_confirmation,label:"确认密码" %>	
				<%= f.submit "保存",class:"btn btn-primary btn-default" %>
			<% end %>
			
			<br>
			<%=gravatar_for @user %>
			<a href="http://gravatar.com/emails">change</a>
		</div>
	</div>
</div>
