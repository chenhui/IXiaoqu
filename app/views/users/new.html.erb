<% provide(:title,"注册") %>
<h1 class="center">注 册</h1>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 ">
			<%= bootstrap_form_for(@user) do |f| %>
				<%= f.text_field :name ,label:"姓名"%>
				<%= f.email_field :email,label:"邮件" %>
				<%= f.password_field :password ,label:"密码"%>
				<%= f.password_field :password_confirmation,label:"确认密码" %>	
				<%= f.submit "提交" %>
			<% end %>
		</div>
	</div>
</div>
